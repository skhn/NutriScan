<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_for_settings"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardBackgroundColor="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/cardview_settings_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_settings_button"
            android:layout_below="@+id/cardview_settings_text"
            android:layout_alignParentRight="true"
            android:onClick="deleteMethod"
            android:text="@string/settings_card_del"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>